<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/daytimeGradient"
            android:alpha="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/daygradient" />

        <ImageView
            android:id="@+id/dawnGradient"
            android:alpha="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dawngradient"
            />

        <ImageView
            android:id="@+id/sunriseGradient"
            android:alpha="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sunrisegradient" />

        <ImageView
            android:id="@+id/nightGradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:background="@drawable/nightgradient" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fastCloud"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:alpha=".2"
            app:srcCompat="@drawable/fastcloud" />

        <ImageView
            android:id="@+id/mediumCloud"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:alpha=".2"
            app:srcCompat="@drawable/mediumcloud" />

        <ImageView
            android:id="@+id/slowCloud"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:alpha=".2"
            app:srcCompat="@drawable/slowcloud" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sun"
        android:layout_width="158dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="158dp"
            android:layout_height="150dp"
            android:background="@drawable/sun" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="380dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" >
        <ImageView
            android:id="@+id/daytimeMt"
            android:alpha="0"
            android:layout_width="500dp"
            android:layout_height="380dp"
            tools:layout_editor_absoluteX="-95dp"
            tools:layout_editor_absoluteY="341dp" />

        <ImageView
            android:id="@+id/dawnMt"
            android:alpha="0"
            android:layout_width="500dp"
            android:layout_height="380dp"
            tools:layout_editor_absoluteX="-95dp"
            tools:layout_editor_absoluteY="341dp" />

        <ImageView
            android:id="@+id/sunriseMt"
            android:alpha="0"
            android:layout_width="500dp"
            android:layout_height="380dp"
            tools:layout_editor_absoluteX="-95dp"
            tools:layout_editor_absoluteY="341dp" />

        <ImageView
            android:id="@+id/nightMt"
            android:layout_width="500dp"
            android:layout_height="380dp"
            android:alpha="1"
            tools:layout_editor_absoluteX="-95dp"
            tools:layout_editor_absoluteY="341dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:text="Break 40 clocks to \ndeactivate alarm"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:alpha=".6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />


    <TextView
        android:id="@+id/counterText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/comfortaa"
        android:text="Score: 0"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:alpha=".6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/lives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:text="lives: 3"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:alpha=".6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <RelativeLayout
        android:id="@+id/progressParent"
        android:layout_width="170dp"
        android:layout_height="30dp"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:progressBackgroundTint= "@color/white"
            android:progressTint= "@color/white"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:soundEffectsEnabled="false"
            android:id="@+id/analogClock"
            android:layout_width="70dp"
            android:layout_height="77dp"
            android:background="@drawable/analog"
            android:alpha="1"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="663dp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/brokenAnalogClock"
            android:layout_width="70dp"
            android:layout_height="77dp"
            android:background="@drawable/brokenanalog"
            android:alpha="0"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="663dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:soundEffectsEnabled="false"
            android:id="@+id/hourglass"
            android:layout_width="53dp"
            android:layout_height="80dp"
            android:background="@drawable/hourglass"
            android:alpha="1"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="663dp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/brokenHourglass"
            android:layout_width="53dp"
            android:layout_height="80dp"
            android:background="@drawable/brokenhourglass"
            android:alpha="0"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="663dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">
        <!-- GAME BUTTON -->
        <Button
            android:id="@+id/startGame"
            android:alpha="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="Start" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>